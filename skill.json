{
  "name": "backup-manager",
  "version": "1.1.0",
  "description": "Multi-destination backup manager with intelligent change detection (local, S3, remote, Lobster)",
  "author": "CMD / Valentino",
  "license": "MIT",
  "keywords": ["backup", "s3", "rsync", "memory", "persistence", "lobster", "smart"],
  "scripts": {
    "backup": "scripts/backup.sh",
    "backup-smart": "scripts/backup_memory_smart.sh",
    "install": "scripts/install.sh",
    "restore": "scripts/restore.sh"
  },
  "workflows": {
    "lobster": "lobster-workflows/backup-inteligente.lobster"
  },
  "requirements": {
    "local": [],
    "s3": ["aws-cli"],
    "remote": ["rsync", "ssh"]
  },
  "config": {
    "path": "config/backup.conf",
    "template": "config/backup.conf.example"
  },
  "features": [
    "smart-backup",
    "lobster-integration",
    "change-detection",
    "multi-destination"
  ]
}
